from django.db import models
from django.contrib.auth.models import User

class Subscriber(User):
    serial_number = models.DecimalField(max_digits=10, decimal_places=2)  # Add appropriate parameters
    title = models.CharField(max_length=150)
    slug = models.SlugField(unique=True)
    description = models.TextField()
    order = models.IntegerField(default=1)
    users = models.ManyToManyField(User, related_name='subscribers')  # Changed related_name

SUBS_CHOICES = (
    ('Entreprise', 'ent'),
    ('Professional', 'pro'),
    ('Free', 'free')
)

class Subs(models.Model):
    slug = models.SlugField()
    sub_type = models.CharField(
        choices=SUBS_CHOICES,
        default='Free',
        max_length=30
    )
    user = models.OneToOneField(User, on_delete=models.SET_NULL, null=True, related_name='subscription')  # Added related_name

    status = models.CharField(max_length=100)
    created = models.DateTimeField(auto_now_add=True)

    def __str__(self):
        return self.sub_type
